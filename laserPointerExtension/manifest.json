{
    "name": "Laser Pointer extension",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Use OSC messages to control a virtual mouse.",
    "background": {
        "page": "background.html"
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "Laser Pointer Extension",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*"
    ],
    "content_security_policy": "script-src 'self' http://localhost:9091 ; object-src 'self'"
}